# Dockerfile.python
FROM python:3.10

# Set the main working directory to /app
WORKDIR /app

# Install the PostgreSQL client so 'dropdb', 'createdb', and 'psql' are available
RUN apt-get update && apt-get install -y postgresql-client

# Copy requirements.txt and install dependencies
COPY ./requirements.txt /app
# Upgrade pip first, then install with retry logic for SSL/network issues
RUN pip install --upgrade pip && \
    for i in 1 2 3 4 5; do \
        pip install -r /app/requirements.txt && break || sleep 5; \
    done

# Set entrypoint to keep the container running for testing
CMD ["tail", "-f", "/dev/null"]